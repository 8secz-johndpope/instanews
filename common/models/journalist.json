{
  "name": "journalist",
  "base": "voteUser",
  "strict": false,
  "idInjection": false,
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "username": {
      "type": "string",
      "id": true,
      "required": true,
      "index": true
    }
  },
  "validations": [],
  "relations": {
    "articles": {
      "type": "hasMany",
      "model": "article",
      "foreignKey": "username",
      "through": "subarticle"
    },
    "notifications": {
      "type": "hasMany",
      "model": "notification",
      "foreignKey": "username"
    },
    "subarticles": {
      "type": "hasMany",
      "model": "subarticle",
      "foreignKey": "username"
    },
    "votes": {
      "type": "embedsOne",
      "model": "votes"
    },
    "upVotes": {
      "type": "hasMany",
      "model": "upVote"
    },
    "downVotes": {
      "type": "hasMany",
      "model": "downVote"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__notifications"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__articles"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__downVotes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__upVotes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__link__upVotes"
    }
  ],
  "methods": []
}
