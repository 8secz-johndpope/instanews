{
  "name": "view",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "created": {
      "type": "date"
    },
    "location": {
      "type": "geopoint"
    }
  },
  "validations": [],
  "relations": {
    "viewable": {
      "type": "belongsTo",
      "polymorphic": true,
      "required": true
    },
    "clicks": {
      "type": "hasMany",
      "model": "click",
      "foreignKey": ""
    },
    "journalist": {
      "type": "belongsTo",
      "model": "journalist",
      "foreignKey": "username"
    }
  },
  "indexes": {
    "parent_index": {
      "viewableId": 1,
      "viewableType": 1
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "methods": []
}
