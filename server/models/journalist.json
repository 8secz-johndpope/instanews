{
  "name": "journalist",
  "base": "User",
  "strict": false,
  "idInjection": false,
  "indexes": {
    "unique_index": {
      "keys": {
        "username": 1,
        "email": 1
      },
      "options": {
        "background": true
      }
    }
  },
  "hidden": [
    "verificationToken"
  ],
  "properties": {
    "firstName": {
      "type": "string"
    },
    "lastName": {
      "type": "string"
    },
    "username": {
      "type": "string",
      "id": true,
      "required": true,
      "index": true
    }
  },
  "validations": [],
  "relations": {
    "articles": {
      "type": "hasMany",
      "model": "article",
      "foreignKey": "username",
      "through": "subarticle"
    },
    "notifications": {
      "type": "hasMany",
      "model": "notif",
      "foreignKey": "username"
    },
    "subarticles": {
      "type": "hasMany",
      "model": "subarticle",
      "foreignKey": "username"
    },
    "installations": {
      "type": "hasMany",
      "model": "installation",
      "foreignKey": "userId"
    },
    "stats": {
      "type": "hasOne",
      "model": "stat",
      "foreignKey": ""
    },
    "clicks": {
      "type": "hasMany",
      "model": "click",
      "polymorphic": "clickable"
    },
    "views": {
      "type": "hasMany",
      "model": "view",
      "foreignKey": "username"
    },
    "upVotes": {
      "type": "hasMany",
      "model": "upVote",
      "foreignKey": "username"
    },
    "downVotes": {
      "type": "hasMany",
      "model": "downVote",
      "foreignKey": "username"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "deleteById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "clearBadge"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__upVotes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__downVotes"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "passwordReset"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "requestPasswordReset"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "resendConfirmation"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findOne"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "confirm"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "agreeToPrivacy"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "agreeToTerms"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__create__accessTokens"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__updateById__notifications"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__notifications"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "__get__articles"
    }
  ],
  "methods": {}
}
